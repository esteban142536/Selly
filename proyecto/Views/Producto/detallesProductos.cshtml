@model IEnumerable<Infraestructure.Models.producto>

@{
    ViewBag.Title = "detallesProductos";
}

<h2>detallesProductos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.totalStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantMaxima)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantMinima)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costoUnitario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.nombre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.totalStock)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cantMaxima)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cantMinima)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.costoUnitario)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.descripcion)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TipoCategoria.Descripcion)
    </td>
    @foreach (var itemProve in item.proveedor)
    {
        <td>
            @Html.DisplayFor(modelItem => itemProve.nombreEmpresa)
        </td>
    }
    </tr>
}

</table>
