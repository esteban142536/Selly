@model IEnumerable<Infraestructure.Models.producto>

@{
    ViewBag.Title = "detallesProductos";
}

<h2>Lista de productos registrados</h2>


<div class="col-lg-9">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-sm-3">
                <div class="card" style="width: 12rem;">

                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.nombre)</h5>
                        <h6 class="card-subtitle mb-2 text-muted"> @Html.DisplayNameFor(model => model.TipoCategoria): @Html.DisplayFor(modelItem => item.TipoCategoria.Descripcion)</h6>
                        <p class="card-text">   @Html.DisplayNameFor(model => model.costoUnitario): &#8353;@Html.DisplayFor(modelItem => item.costoUnitario)</p>
                        @Html.ActionLink("Ver detalles", "detalleEstecifico", new { id = item.id })
                    </div>
                </div>
            </div>

        }
    </div>
</div>


