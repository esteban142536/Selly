@model Infraestructure.Models.usuario

@{
    ViewBag.Title = "Inicio de sesión";
}

<div>
    <form method="post">
        <div class="content-sesion">
            <h2>
                ¡Te damos la bienvenida a
                <img class="imagen_Logo"
                     src="~/Imagenes/Logo.PNG"
                     alt="No se encuentra la imagen"
                     style="width:5%; height:5%" />!
            </h2>
            <h3>Inicio de Sesión con tu cuenta Selly</h3>

            <br /><br />
            <div class="content-sesion-body">
                <p>
                    Correo electr&#243;nico:
                    @Html.TextBoxFor(x => x.email)
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                </p>

                <p>
                    Contrase&#241;a:
                    @Html.PasswordFor(x => x.clave)
                    @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })
                </p>
            </div>

            <a>
                @Html.ActionLink("¿No tienes cuenta? Create uno", "registro", "Usuario", null, new { style = "text-decoration: none", @class = "text-success" })
            </a>
            <br /><br />

            <button class="btn btn-success" type="submit" value="Submit">Acceder</button>

            <button type="button" class="btn btn-success">
                @Html.ActionLink("Cancelar", "Index", "Home", null, new { style = "text-decoration:none", @class = "btn-success" })
            </button>
        </div>
    </form>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
