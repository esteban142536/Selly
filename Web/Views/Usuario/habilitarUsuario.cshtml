@model IEnumerable<Infraestructure.Models.usuario>

@{
    ViewBag.Title = "habilitarUsuario";
}

<h2>habilitarUsuario</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.esActivo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tipoUsuario.permisoUsuario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.esActivo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tipoUsuario.permisoUsuario)
        </td>
        <td>
            @Html.ActionLink("Desabilitar usuario", "habilitarUsuario", "Usuario", new { idUsuario = item.id }, new { style = "text-decoration:none", @class = "btn-outline-success" })
        </td>
    </tr>
}

</table>
