@model Infraestructure.Models.contactos

@{
    ViewBag.Title = "EditarContacto";
}


@using (Html.BeginForm("Save", "Contacto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="titulo">
        <h2>Editar contacto</h2>
        <hr />
    </div>

    <div class="content-AgregarContacto" style="margin-left: 30%; margin-right: 30%; margin-top: 2%">
        @Html.HiddenFor(model => model.id)
        <p>
            Nombre de la Empresa:
            @Html.DropDownList("proveedor",
                (SelectList)ViewBag.idProveedor,
                null,
                new { htmlAttributes = new { @class = "form-control" } })
        </p>

        <p>
            Nombre del empleador:
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </p>

        <p>
            N&#250;mero de tel&#233;fono:
            @Html.EditorFor(model => model.numero, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.numero, "", new { @class = "text-danger" })
        </p>

        <p>
            Correo electr&#243;nico:
            @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
        </p>

        <br />

        <div class="button" style="margin-left:30%">
            <button type="submit" class="btn btn-success">Aceptar</button>
            <button type="button" class="btn btn-success">
                @Html.ActionLink("Cancelar", "Index", "Proveedor", new { style = "text-decoration:none", @class = "btn-success" })
            </button>
        </div>
    </div>
}